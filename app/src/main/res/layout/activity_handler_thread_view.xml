<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

    <TextView
        android:id="@+id/tv_show_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="显示结果"
        android:textSize="16dp"/>

    <Button
        android:id="@+id/btn_love_study"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_show_result"
        android:layout_centerHorizontal="true"
        android:text="延迟 1s 我爱学习"/>

    <Button
        android:id="@+id/btn_not_love_study"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_love_study"
        android:layout_centerHorizontal="true"
        android:text="延迟 3s 我不爱学习"/>

    <Button
        android:id="@+id/btn_cancel_handler_thread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_not_love_study"
        android:layout_centerHorizontal="true"
        android:text="结束线程消息循环"/>

</RelativeLayout>